  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/tolgaozdemir/3-column-card-component"
  },
  "devDependencies": {
    "autoprefixer": "^10.2.5",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.13",
    "postcss-cli": "^8.3.1"
  }
}
